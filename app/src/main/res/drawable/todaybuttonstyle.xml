<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="90"
        android:centerX="35%"
        android:centerColor="@color/background_orange"
        android:startColor="@color/background_orange"
        android:endColor="@color/background_orange"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <stroke
        android:width="0dp"
        android:color="@color/white"
        />
</shape>
