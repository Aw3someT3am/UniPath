<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:layout_gravity="left"
    android:layout_margin="4dp"
    android:background="@color/dark_grey"
    card_view:cardBackgroundColor="@color/dark_grey"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_15_transparent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvDeadlineDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/lato"
        android:scaleType="centerCrop"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/deadlineStatusIndicator"
        android:layout_width="15dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="60dp"
        android:src="@color/background_light_orange"
        android:tint="@color/background_light_orange" />

</android.support.v7.widget.CardView>

