<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:nestedScrollingEnabled="true">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tvProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/progress_label"
            android:fontFamily="@font/lustria"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/solid_white"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/rlProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProgressLabel" >

            <ProgressBar
                android:id="@+id/pbProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_margin="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:progress="0"
                android:progressBackgroundTint="@color/background_light_orange"
                android:progressTint="@color/progress_green" />

            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pbProgress"
                android:layout_alignLeft="@id/pbProgress"
                android:layout_alignRight="@id/pbProgress"
                android:layout_alignTop="@id/pbProgress"
                android:background="@android:color/transparent"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:text="0/0"
                android:textColor="@color/solid_white"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlProgress"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/ivProfileImage">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lustria"
                    android:gravity="right"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/white_80_transparent" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvFirstName"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lustria"
                    android:gravity="right"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/white_80_transparent" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCollegeList"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_below="@id/rlUserInfo"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_transparent_bg"
            android:fontFamily="@font/lustria">

            <RelativeLayout
                android:id="@+id/rlFavoritesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" >

                <TextView
                    android:id="@+id/tvFavoritesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Favorite Colleges"
                    android:textColor="@color/solid_white"
                    android:textSize="16sp"
                    android:fontFamily="@font/lustria" />
            </RelativeLayout>

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/picker"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_above="@+id/ivBack"
                android:layout_below="@+id/rlFavoritesLabel"
                app:dsv_orientation="horizontal" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:tint="@color/background_light_orange"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/ivForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:tint="@color/background_light_orange"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

            <ImageView
                android:id="@+id/mapFavorites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/ivBack"
                android:scaleType="fitXY"
                android:tint="@color/solid_white"
                app:srcCompat="@drawable/world" />

            <TextView
                android:id="@+id/tvNoColleges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlFavoritesLabel"
                android:layout_margin="16dp"
                android:gravity="center_horizontal"
                android:visibility="invisible"
                android:text="No favorite colleges"
                android:fontFamily="@font/lustria"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:textColor="@color/white_80_transparent" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bagde_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/rlUserInfo"
            android:layout_marginBottom="8dp" >

            <ImageView
                android:id="@+id/notification"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_notifications_black_24dp"
                android:tint="@color/background_light_orange"/>

            <TextView
                android:id="@+id/tvCounter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/item_count"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/bvHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:background="@color/background_orange"
            android:text="HELP"
            android:textColor="@color/solid_white" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" >

        <include layout = "@layout/view_hint_info"/>

    </FrameLayout>

</RelativeLayout>