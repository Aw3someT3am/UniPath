<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greygradient"
    android:nestedScrollingEnabled="true">

    <TextView
        android:id="@+id/tvProgressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/progress_label"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/solid_white"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rlProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProgressLabel" >

        <ProgressBar
            android:id="@+id/pbProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:progress="0"
            android:progressBackgroundTint="@color/background_light_orange"
            android:progressTint="@color/progress_green" />

        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pbProgress"
            android:layout_alignLeft="@id/pbProgress"
            android:layout_alignRight="@id/pbProgress"
            android:layout_alignTop="@id/pbProgress"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="SOME NUMBER/SOME NUMBER"
            android:textColor="@color/solid_white"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:layout_below="@id/rlProgress"
        android:background="@drawable/button_border_orange" >

        <TextView
            android:id="@+id/tvUserInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="User Info"
            android:textColor="@color/solid_white" />

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/tvUserInfoLabel"
            android:background="@drawable/button_border_orange"
            app:srcCompat="@color/solid_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/tvUserInfoLabel" >

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white_80_transparent"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFirstName"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/white_80_transparent"
                tools:text="email" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCollegeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bvLogout"
        android:layout_below="@id/rlUserInfo"
        android:background="@drawable/button_border_orange"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tvFavoritesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Favorite Colleges"
            android:textColor="@color/solid_white" />

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:id="@+id/picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFavoritesLabel"
            android:layout_above="@+id/ivBack"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:dsv_orientation="horizontal" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:tint="@color/background_light_orange"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:id="@+id/ivForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:tint="@color/background_light_orange"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp" />

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/mapFavorites"
            android:layout_marginEnd="17dp"
            android:scaleType="fitXY"
            android:tint="@color/progress_green"
            app:srcCompat="@drawable/ic_cached_black_24dp" />

        <ImageView
            android:id="@+id/mapFavorites"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:scaleType="fitXY"
            android:tint="@color/solid_white"
            app:srcCompat="@drawable/baseline_public_white_48dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/bvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/background_orange"
        android:text="@string/log_out"
        android:textColor="@color/solid_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>