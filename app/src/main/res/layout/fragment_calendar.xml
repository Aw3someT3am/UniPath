<!--<?xml version="1.0" encoding="utf-8"?>-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greygradient"
    android:id="@+id/main_content">


    <Button
        android:id="@+id/btnPreviousDeadine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnNextDeadline"
        android:background="@drawable/calendarbuttonstyle"
        android:drawableLeft="@drawable/previous"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/lato"
        android:shadowRadius="5"
        android:text="Previous &#10;deadline"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@id/monthYearBtn"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnNextDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/calendarbuttonstyle"
        android:drawableRight="@drawable/next"
        android:elevation="9dp"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/lato"
        android:text="Next &#10;deadline"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@id/monthYearBtn"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnNextDeadline"
        android:layout_centerHorizontal="true"
        android:background="@drawable/todaybuttonstyle"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/lato"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Today"
        android:layout_below="@id/monthYearBtn"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/monthYearBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!--android:layout_below="@+id/btnNextDeadline"-->



    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:fadingEdge="horizontal"
        android:hapticFeedbackEnabled="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_below="@id/btnNextDeadline"
        app:compactCalendarBackgroundColor="@color/transparent"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        app:compactCalendarTargetHeight="285dp"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarTextSize="16sp" />


    <ImageView
        android:id="@+id/refreshBtn"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="28dp"
        android:focusableInTouchMode="true"
        android:tint="@color/progress_green"
        app:srcCompat="@drawable/ic_cached_black_24dp" />


    <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbars="vertical"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_below="@+id/compactcalendar_view">-->

    <ListView

        android:id="@+id/bookings_listview"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp"
        android:focusableInTouchMode="true"
        android:nestedScrollingEnabled="true">

    </ListView>

    <!--</android.support.v4.widget.NestedScrollView>-->

    <!--<ListView-->
        <!--android:id="@+id/empty_listview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="HELLOHELLOHELLO"/>-->



</RelativeLayout>

