<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.like.LikeButton
        android:id="@+id/lbLikeButton"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:anim_scale_factor="2"
        app:icon_size="25dp"
        app:icon_type="heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:like_drawable="@drawable/check_active"
        app:unlike_drawable="@drawable/check_inactive" />

    <TextView
        android:id="@+id/tvCollegeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/college_name"
        app:layout_constraintStart_toEndOf="@+id/lbLikeButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDeadlineDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/deadline_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lbLikeButton"
        app:layout_constraintTop_toBottomOf="@+id/tvCollegeName" />

</android.support.constraint.ConstraintLayout>